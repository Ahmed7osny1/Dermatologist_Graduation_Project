<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F9E2D7"
    tools:context=".ui.appscreen.SkinTypeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="22dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginStart="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/diagnose"
        android:layout_width="370dp"
        android:layout_height="130dp"
        android:backgroundTint="@color/card_color"
        app:cardCornerRadius="30dp"
        app:cardElevation="3dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:scaleType="centerCrop"
            android:src="@drawable/normal"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:text="Normal Skin"
            android:textColor="@color/first_color"
            android:textSize="25sp"
            android:fontFamily="monospace"
            android:textStyle="bold|italic" />

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/oil"
            android:layout_width="370dp"
            android:layout_height="130dp"
            android:backgroundTint="#C29A7E"
            app:cardCornerRadius="30dp"
            app:cardElevation="3dp"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:scaleType="centerCrop"
                android:src="@drawable/drychildren"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:text="Dry Skin"
                android:textColor="#513A29"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:textStyle="bold|italic" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/diagnose1"
            android:layout_width="370dp"
            android:layout_height="130dp"
            android:backgroundTint="@color/card_color"
            app:cardCornerRadius="30dp"
            app:cardElevation="3dp"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:scaleType="centerCrop"
                android:src="@drawable/oilskin"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="50dp"
                android:text="Oil Skin"
                android:textColor="@color/first_color"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:textStyle="bold|italic" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/diagnose2"
            android:layout_width="370dp"
            android:layout_height="130dp"
            android:backgroundTint="#C29A7E"
            app:cardCornerRadius="30dp"
            app:cardElevation="3dp"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:scaleType="centerCrop"
                android:src="@drawable/mixskin"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="50dp"
                android:text="Mix Skin"
                android:textColor="#513A29
"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:textStyle="bold|italic" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/diagnose4"
            android:layout_width="370dp"
            android:layout_height="130dp"
            android:backgroundTint="@color/card_color"
            app:cardCornerRadius="30dp"
            app:cardElevation="3dp"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:scaleType="centerCrop"
                android:src="@drawable/sensitive"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:text="Sensitive\n  Skin"
                android:textColor="@color/first_color"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:textStyle="bold|italic" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>